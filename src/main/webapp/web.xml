<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.internet.shop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>all</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.GetAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>all</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>inject-data</servlet-name>
        <servlet-class>com.internet.shop.controllers.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inject-data</servlet-name>
        <url-pattern>/inject-data</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.DeleteUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.AddNewProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.GetAllProductsAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allProductsUserView</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.GetAllProductsUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProductsUserView</servlet-name>
        <url-pattern>/products/user-view-all-products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>buyProduct</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.AddToShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buyProduct</servlet-name>
        <url-pattern>/shopping-carts/products/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cart-products</servlet-name>
        <servlet-class>com.internet.shop.controllers.cart.GetShoppingCartControllers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cart-products</servlet-name>
        <url-pattern>/shopping-carts/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete-product-from-cart</servlet-name>
        <servlet-class>com.internet.shop.controllers.cart.DeleteProductFromCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete-product-from-cart</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete-product</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.DeleteProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete-product</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>all-orders-admin</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.GetAllOrdersAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>all-orders-admin</servlet-name>
        <url-pattern>/orders/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>all-orders</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.GetAllUserOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>all-orders</servlet-name>
        <url-pattern>/orders/by-user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>completeOrder</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.CompleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>completeOrder</servlet-name>
        <url-pattern>/order/complete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/order/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>com.internet.shop.web.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
